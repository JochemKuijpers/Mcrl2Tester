% b = the Meas chuck is of type A
% waferType = The type of wafer (RType = A, B or AB)

[true*] forall n : Nat . forall t : RType . [ lot_info(n, t)]
nu X (b: Bool = true, waferType : RType = t) . (
    [swap] X(!b, waferType) &&
    forall newWaferType : RType . [lot_info(n, newWaferType)] X(b, newWaferType) &&
    [move_r2(In, Meas)] (val(!b && waferType == A) => false) &&
    [move_r2(In, Meas)] (val(b && waferType == B) => false)
)
